<Window x:Class="Botvinko_VE.ChagePasswordWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Botvinko_VE"
        mc:Ignorable="d"
               Title="Смена пароля" MinHeight="400" MinWidth="600" SizeToContent="WidthAndHeight">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00FF" Offset="0.0" />
            <GradientStop Color="#87CEFA" Offset="1.0" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Смена пароля"
                   FontSize="24" 
                   FontWeight="Bold"
                   Foreground="#333" 
                   HorizontalAlignment="Center" 
                   Margin="0,10"
                   FontFamily="Bahnschrift"/>

        <StackPanel Grid.Row="1"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Width="300">
            <TextBlock Text="Текущий пароль:"/>
            <PasswordBox x:Name="CurrentPasswordBox"
                         Margin="0,5,0,10"
                         Height="35" 
                         Background="#FFF" 
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <TextBlock Text="Новый пароль:"/>
            <PasswordBox x:Name="NewPasswordBox"
                         Margin="0,5,0,10" 
                         Height="35" 
                         Background="#FFF"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <TextBlock Text="Подтвердить новый пароль:" />
            <PasswordBox x:Name="ConfirmNewPasswordBox" 
                         Margin="0,5,0,10" 
                         Height="35" 
                         Background="#FFF"
                         BorderBrush="#CCC"
                         BorderThickness="1"/>

            <Button Content="Изменить пароль" 
                    Width="120"
                    Height="30"
                    Background="#1E90FF" 
                    Foreground="White"
                    FontWeight="Bold" 
                    HorizontalAlignment="Center" 
                    Cursor="Hand" 
                    Margin="0,20,0,0"
                    BorderThickness="0" 
                    Click="ChangePassword_Click"/>
        </StackPanel>
    </Grid>
</Window>