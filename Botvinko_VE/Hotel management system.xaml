<Window x:Class="Botvinko_VE.Hotel_management_system"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Botvinko_VE"
        mc:Ignorable="d"
        Title="Hotel_management_system" Height="450" Width="800">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Purple" Offset="0.0"/>
            <GradientStop Color="blue" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin=" 10">
        <TabControl>
            <TabItem Header="Гости">
                <Frame Name="GuestsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Бронирование">
                <Frame Name="BookingsFrame" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Номерной фонд">
                <Frame Name="number_of_rooms" NavigationUIVisibility="Hidden"/>
            </TabItem>

            <TabItem Header="Управление клинингом">
                <Frame Name="cleaning_management" NavigationUIVisibility="Hidden"/>
            </TabItem>



        </TabControl>

    </Grid>
</Window>