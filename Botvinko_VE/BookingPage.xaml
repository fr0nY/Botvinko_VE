<Page x:Class="Botvinko_VE.BookingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Botvinko_VE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="BookingPage">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="Purple" Offset="0.0"/>
            <GradientStop Color="blue" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="ФИО гостя:" FontWeight="Bold" />
            <TextBlock x:Name="GuestFullNameTextBlock" />

            <TextBlock Text="Номер проживания:" FontWeight="Bold" />
            <TextBlock x:Name="RoomNumberTextBlock" />

            <TextBlock Text="Дата въезда:" FontWeight="Bold" />
            <TextBlock x:Name="CheckInDateTextBlock" />

            <TextBlock Text="Дата выезда:" FontWeight="Bold" />
            <TextBlock x:Name="CheckOutDateTextBlock" />

            <TextBlock Text="Общая стоимость проживания:" FontWeight="Bold" />
            <TextBlock x:Name="TotalCostTextBlock" />

            <TextBlock Text="Статус проживания:" FontWeight="Bold" />
            <TextBlock x:Name="StatusTextBlock" />

            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="Сохранить" Click="SaveButton_Click" Margin="10"/>
                <Button Content="Удалить" Click="DeleteButton_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>