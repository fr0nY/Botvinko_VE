<Page x:Class="Botvinko_VE.RoomsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Botvinko_VE"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RoomsPage">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00FF" Offset="0.0"/>
            <GradientStop Color="#87CEFA" Offset="1.0"/>
        </LinearGradientBrush>
    </Page.Background>
    <Grid Margin="20">
        <StackPanel Background="White">
            <TextBlock Text="Этаж:" FontWeight="Bold" />
            <TextBlock x:Name="floor" />

            <TextBlock Text="Номер:" FontWeight="Bold" />
            <TextBlock x:Name="Number" />

            <TextBlock Text="Категоря номера:" FontWeight="Bold" />
            <TextBlock x:Name="numbercategory" />

            <TextBlock Text="Цена номера(за ночь):" FontWeight="Bold" />
            <TextBlock x:Name="price" />

            <TextBlock Text="Статус номера:" FontWeight="Bold" />
            <TextBlock x:Name="status" />

            <StackPanel Orientation="Horizontal" Margin="20">
                <Button Content="Обновить" Click="SaveButton_Click" Margin="10"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>