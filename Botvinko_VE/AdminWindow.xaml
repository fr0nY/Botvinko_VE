<Window x:Class="Botvinko_VE.AdminWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Botvinko_VE"
        mc:Ignorable="d"
               Title="Управление пользователями" Height="500" Width="850">

    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF00FF" Offset="0.0"/>
            <GradientStop Color="#87CEFA" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <DataGrid x:Name="Users"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  Margin="10"
                  SelectionMode="Single"
                  Background="White"
                  BorderBrush="#CCCCCC">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Фамилия" Binding="{Binding Lastname}" Width="Auto"/>
                <DataGridTextColumn Header="Имя" Binding="{Binding firstname}" Width="Auto"/>
                <DataGridTextColumn Header="Роль" Binding="{Binding role}" Width="Auto"/>
                <DataGridTextColumn Header="Логин" Binding="{Binding username}" Width="Auto"/>
                <DataGridCheckBoxColumn Header="Заблокирован" Binding="{Binding IsLocked}" Width="Auto"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="1" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Center"
                    Margin="0,10,0,0">
            <Button Content="Добавить" 
                    Width="100"
                    Height="30"
                    Background="#008000" 
                    Foreground="White"
                    FontWeight="Bold" 
                    Cursor="Hand"
                    Margin="0,0,10,0"
                    BorderThickness="0" 
                    Click="AddUser_Click"/>
            <Button Content="Удалить" 
                    Width="100"
                    Height="30"
                    Background="#E32636" 
                    Foreground="White"
                    FontWeight="Bold" 
                    Cursor="Hand" 
                    Margin="0,0,10,0"
                    BorderThickness="0" 
                    Click="DeleteUser_Click"/>
            <Button Content="Сохранить" 
                    Width="100"
                    Height="30"
                    Background="#3E5F8A" 
                    Foreground="White"
                    FontWeight="Bold" 
                    Cursor="Hand" 
                    BorderThickness="0" 
                    Click="SaveChanges_Click"/>
        </StackPanel>
    </Grid>
</Window>
